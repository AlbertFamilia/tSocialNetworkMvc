@model Tetas.Common.ViewModels.LoginModel

@{
    ViewData["Title"] = "Log in";
}


 
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group  col-md-4">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Password"></label>
                    <input asp-for="Password"  type="password"class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Log in</button>
                    @*Or
                    <button type="submit" class="btn btn-secondary">Connect With GitHub</button>
                    <button type="submit" class="btn btn-primary">Connect With Outlook</button>
                    <button type="submit" class="btn btn-danger">Connect With Gmail</button> </div>*@
                <div class="form-group">
                    <p>
                        @*<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>*@
                    </p>
                    <p>
                        <a asp-area=""
                           asp-controller="Account"
                           asp-action="Register"
                           class="list-group-item list-group-item-action bg-light">You dont have an Account? Join Us/Create Account</a>
                     
                        <a asp-area=""
                           asp-controller="Account"
                           asp-action="Register"
                           class="list-group-item list-group-item-action bg-light">Do you Forgot your Password? Recover your access</a>

                        @*<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>*@
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
