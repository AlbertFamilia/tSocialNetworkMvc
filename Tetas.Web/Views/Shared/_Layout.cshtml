    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <a asp-area="" asp-controller="Home" asp-action="Index">Tetas</a>
            </div>
            <div class="list-group list-group-flush">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a href="#" class="list-group-item list-group-item-action bg-light">Multimedia</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Contacts</a>
                    <a asp-controller="Groups" asp-action="Index" class="list-group-item list-group-item-action bg-light">Groups</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Chats</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Events</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Tales</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Pins</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Blogs</a>
                    <a href="#" class="list-group-item list-group-item-action bg-light">Tests</a>
                }
                else
                {
                    <a asp-area=""
                       asp-controller="Account"
                       asp-action="Login"
                       class="list-group-item list-group-item-action bg-light">Login/Connect</a>
                    <a asp-area=""
                       asp-controller="Account"
                       asp-action="Register"
                       class="list-group-item list-group-item-action bg-light">Join Us/Create Account</a>

                }
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

                @*<button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>*@

                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Explore <span class="sr-only">(current)</span></a>
                        </li>
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Posts"
                                   asp-action="Index">My Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Meet People</a>
                            </li>

                            <li class="nav-item dropdown">

                                <a class="nav-link dropdown-toggle"
                                   id="navbarDropdown"
                                   role="button" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false"
                                   asp-area="" asp-controller="Account" asp-action="ChangeUser">
                                    @this.User.Identity.Name

                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Alerts </a>
                                    <a class="dropdown-item" href="#">Profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area=""
                                       asp-controller="Account"
                                       asp-action="Logout">Exit</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Help</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area=""
                                   asp-controller="Account"
                                   asp-action="Login">Connect</a>
                            </li>
                            <li class="nav-item">
                                <a>Or</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area=""
                                   asp-controller="Account"
                                   asp-action="Register">Join Us</a>
                            </li>


                        }
                    </ul>
